@using SiteCoreDemo.Areas.Admin.Models;
@model IEnumerable<PagesData>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Admin_Layout.cshtml";
}


<div class="container">

    <h2>Pages Data List</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="row">
        <div class="table table-responsive">
            <div class="col-md-10 col-md-offset-1">
                <table class="table">
                    <tr>
                        <th>Page Url</th>
                        <th>Page Title</th>
                        <th>Keywords</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PageUrl</td>
                            <td>@item.PageTitle</td>
                            <td>@item.Keywords</td>
                            <td>@item.Descriptions</td>
                            <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>
                        </tr>


                    }
                </table>
            </div>
        </div>

    </div>
</div>

