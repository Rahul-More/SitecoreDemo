@using SiteCoreDemo.Areas.Admin.Models;
@model PagesData

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Admin_Layout.cshtml";
}

<section id="content">
    <div class="container">

        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <h3>Are you sure you want to delete Keywords and Descriptions for page <strong>" @Html.DisplayFor(model => model.PageUrl) "</strong></h3>
                @using (Html.BeginForm())
                {
                    <p>
                        <input type="submit" value="Delete" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </p>
                }

            </div>
        </div>
    </div>
</section>