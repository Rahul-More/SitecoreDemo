@using SiteCoreDemo.Areas.Admin.Models;
@model AdminLogin
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Admin Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="../../../../Content/Theme/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="../../../../Content/Theme/css/cubeportfolio.min.css" rel="stylesheet" type="text/css" />
    <link href="../../../../Content/Theme/css/style.css" rel="stylesheet" type="text/css" />
    <link href="../../../../Content/Theme/skins/default.css" rel="stylesheet" type="text/css" />
</head>
<body>


    <div id="wrapper">

        <section id="content">
            <div class="container">

                <div class="row">
                    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                        @using (@Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "register-form" }))
                        {
                            <h2>
                                <small>Admin Login</small>
                            </h2>
                            <hr class="colorgraph">

                            <div class="form-group">

                                @Html.TextBoxFor(i => i.Name, new { @class = "form-control input-lg", @placeholder = "Id", @tabindex = "3" })

                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(i => i.Password, new { @class = "form-control input-lg", @placeholder = "Password", @tabindex = "4" })
                            </div>
                            <div class="row">
                                <div class="col-xs-12 col-md-6">
                                    <input type="submit" value="Register" class="btn btn-theme btn-block btn-lg" tabindex="7">
                                </div>
                                @Html.ValidationSummary()
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>



    </div>

    <script src="../../../../Content/Theme/js/jquery.min.js" type="text/javascript"></script>
    <script src="../../../../Content/Theme/js/modernizr.custom.js" type="text/javascript"></script>
    <script src="../../../../Content/Theme/js/jquery.easing.1.3.js" type="text/javascript"></script>
    <script src="../../../../Content/Theme/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="../../../../Content/Theme/js/jquery.appear.js" type="text/javascript"></script>
    <script src="../../../../Content/Theme/js/stellar.js" type="text/javascript"></script>
    <script src="../../../../Content/Theme/js/classie.js" type="text/javascript"></script>
    <script src="../../../../Content/Theme/js/uisearch.js" type="text/javascript"></script>
    <script src="../../../../Content/Theme/js/jquery.cubeportfolio.min.js" type="text/javascript"></script>
    <link href="../../../../Content/Theme/js/google-code-prettify/prettify.css" rel="stylesheet" type="text/css" />
    <script src="../../../../Content/Theme/js/animate.js" type="text/javascript"></script>
    <script src="../../../../Content/Theme/js/custom.js" type="text/javascript"></script>

</body>
</html>
